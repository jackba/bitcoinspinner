<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fee"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_fee_spend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_spend"
        android:layout_below="@+id/et_spend"
        android:text="@string/network_fee_heading"
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/tv_fee_spend_val"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/tv_fee_spend"
        android:layout_below="@+id/tv_fee_spend"
        android:layout_marginRight="30dp"
        android:background="@drawable/transparent_infobox"
        android:gravity="center_vertical"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:text="0.0000 BTC"
        android:textColor="@color/Black"
        android:textSize="18dp" />

</RelativeLayout>