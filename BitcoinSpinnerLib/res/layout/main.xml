<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BitCoinActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/rl_address_ref"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        layout="@layout/addressbox" />

    <include
        android:id="@+id/rl_balance_ref"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/rl_address_ref"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        layout="@layout/balancebox" />

    <Button
        android:id="@+id/btn_send_money"
        style="@style/SendMoneyButton"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/rl_balance_ref"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:text="@string/send_bitcoins"
        true="" />

    <Button
        android:id="@+id/btn_transaction_history"
        style="@style/SendMoneyButton"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/btn_send_money"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/transaction_history"
        true="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:text="This is a beta release. Use at your own risk."
        android:textColor="@color/Black" />

</RelativeLayout>