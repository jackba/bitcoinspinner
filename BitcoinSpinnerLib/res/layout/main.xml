<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BitCoinActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/rl_address_ref"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        layout="@layout/addressbox" />

    <include
        android:id="@+id/rl_balance_ref"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_below="@id/rl_address_ref"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        layout="@layout/balancebox" />

    <Button
        android:id="@+id/btn_send_money"
        style="@style/SendMoneyButton"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@id/rl_balance_ref"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="13dp"
        android:text="@string/send_bitcoins"
        true="" />

    <Button
        android:id="@+id/btn_transaction_history"
        style="@style/SendMoneyButton"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@id/btn_send_money"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/transaction_history"
        true="" />
