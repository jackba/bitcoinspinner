<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/availableToSpend"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_available_spend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_address"
        android:layout_below="@+id/et_address"
        android:text="@string/your_balance"
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/tv_available_spend_balance"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignLeft="@+id/tv_available_spend"
        android:layout_below="@+id/tv_available_spend"
        android:layout_marginRight="30dp"
        android:background="@drawable/transparent_infobox"
        android:gravity="center"
        android:textColor="@color/Black"
        android:textSize="25dp" />

    <RelativeLayout
        android:id="@+id/rl_available_spend_update"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/tv_available_spend_balance"
        android:layout_alignLeft="@+id/tv_available_spend_balance"
        android:layout_alignRight="@+id/tv_available_spend_balance"
        android:layout_alignTop="@+id/tv_available_spend_balance"
        android:background="@drawable/infobox_gray"
        android:visibility="invisible" >

        <ProgressBar
            android:id="@+id/pb_available_spend_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>